<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="585.0" prefWidth="897.0" styleClass="all" stylesheets="@../../../cssStyle/api.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ImageTranslatorController">
    <center>

        <VBox fx:id="imageContainer" onDragDropped="#onDragDropped" onDragOver="#onDragOver">
         <children>
            <ComboBox fx:id="comboBox" prefWidth="150.0" styleClass="comboBox" stylesheets="@../../../cssStyle/api.css">
               <opaqueInsets>
                  <Insets bottom="15.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </ComboBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
         <BorderPane.margin>
            <Insets right="30.0" />
         </BorderPane.margin></VBox>
    </center>
    <right>
        <TextArea fx:id="resultTextField" editable="false" minHeight="150.0" prefHeight="506.0" prefWidth="426.0" wrapText="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets></TextArea>
    </right>
    <bottom>
        <Button fx:id="translateButton" mnemonicParsing="false" onAction="#buttonClickedOn" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
         <graphic>
            <ImageView fitHeight="55.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../image/converter.png" />
               </image>
            </ImageView>
         </graphic></Button>
    </bottom>
</BorderPane>
