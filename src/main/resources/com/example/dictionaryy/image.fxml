<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ImageTranslatorController">
    <top>
        <ComboBox fx:id="comboBox" prefWidth="150.0" styleClass="comboBox" stylesheets="@../../../cssStyle/api.css">
            <VBox.margin>
                <Insets bottom="10.0" right="10.0" />
            </VBox.margin>
        </ComboBox>
    </top>
    <center>

        <VBox fx:id="imageContainer" onDragDropped="#onDragDropped" onDragOver="#onDragOver">

        </VBox>
    </center>
    <right>
        <TextArea fx:id="resultTextField" editable="false" minHeight="150.0" wrapText="true" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <Button fx:id="translateButton" mnemonicParsing="false" text="Translate" onAction="#buttonClickedOn" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
